<h2 class="section-header" style="border-bottom: 0px;">
    <span class="header-decoration left"></span>
    <img src="systems/stryder/assets/jump-icon.svg" width="25px" height="25px" style="border:0px; position: relative; top: 0px; left: -10px;">
    <strong>{{localize "Quick Actions"}}</strong>
    <span class="header-decoration right"></span>
</h2>
<div class="quick-action-container">
    <div class="quick-action-item vertical-jump rollable" data-jump-type="vertical">
        <img src="systems/stryder/assets/vertical-jump-icon.svg" alt="Vertical Jump" class="quick-action-icon" style="border:0px">
        <span class="quick-action-label">{{localize "Vertical"}}</span>
        <input type="text" name="system.jump.vertical" value="{{verticalJumpDistance}}" readonly data-dtype="Number">
    </div>
    <div class="quick-action-item horizontal-jump rollable" data-jump-type="horizontal">
        <img src="systems/stryder/assets/horizontal-jump-icon.svg" alt="Horizontal Jump" class="quick-action-icon" style="border:0px">
        <span class="quick-action-label">{{localize "Horizontal"}}</span>
        <input type="text" name="system.jump.horizontal" value="{{horizontalJumpDistance}}" readonly data-dtype="Number">
    </div>
    <div class="quick-action-item grapple-action rollable" data-action-type="grapple">
        <img src="systems/stryder/assets/grapple-icon.svg" alt="Grapple" class="quick-action-icon" style="border:0px">
        <span class="quick-action-label">{{localize "Grapple"}}</span>
    </div>
</div>
<br />
<h2 class="section-header" style="border-bottom: 0px;"><span class="header-decoration left"></span><img src="systems/stryder/assets/senses.svg" width="25px" height="25px" style="border:0px; position: relative; top: 0px; left: -10px;"><strong>{{localize "Senses"}}</strong><span class="header-decoration right"></span></h2>
<div class="skills-container">
    <div class="skills-grid senses">
        {{#each system.attributes.sense as |sense key|}}
            <div class="skill">
                <img src="systems/stryder/assets/{{key}}-icon.svg" alt="{{key}} icon" class="skill-icon" style='border:0px'>
                <span class="skill-label rollable" data-roll="2d6+@attributes.sense.{{key}}.value" data-label="{{key}}">
                    {{key}}
                </span>
                <input type="text" name="system.attributes.sense.{{key}}.value" value="{{sense.value}}" readonly data-dtype="Number">
            </div>
        {{/each}}
    </div>
</div>
	<br />
<h2 class="section-header" style="border-bottom: 0px;"><span class="header-decoration left"></span><img src="systems/stryder/assets/talents.svg" width="25px" height="25px" style="border:0px; position: relative; top: 0px; left: -10px;"><strong>{{localize "Talents"}}</strong><span class="header-decoration right"></span></h2>
<div class="skills-container">
    <div class="skills-grid talents">
        {{#each system.attributes.talent as |talent key|}}
            <div class="skill">
                <img src="systems/stryder/assets/{{key}}-icon.svg" alt="{{key}} icon" class="skill-icon" style='border:0px'>
                <span class="skill-label rollable" data-roll="2d6+@attributes.talent.{{key}}.value" data-label="{{key}}">
                    {{key}}
                </span>
                <input type="text" name="system.attributes.talent.{{key}}.value" value="{{talent.value}}" readonly data-dtype="Number">
            </div>
        {{/each}}
    </div><br />
</div>

</div>

