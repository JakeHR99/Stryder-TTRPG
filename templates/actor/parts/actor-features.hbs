<div class="flexrow-stats scrolling-container" style="gap: 8px;">
    <!-- Class (Left Column) -->
    <div class="flexcol-stats scroll-wrapper" style="flex: 1;">
		<ol class='items-list'>
		  <li class='item flexrow items-header'>
			<div class='item-name'>
			  <img src="systems/stryder/assets/class-icon.svg" alt="Class">
